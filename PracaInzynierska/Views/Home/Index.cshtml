@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/lib/dropzone/basic.css" />
<link rel="stylesheet" href="~/lib/dropzone/dropzone.css" />
<script src="~/lib/dropzone/dropzone.js"></script>
<div class="text-center col-12">
        <div class="col-md-12 jumbotron">
            <form asp-action="Upload" asp-controller="Home" method="post" class="dropzone needsclick dz-clickable" id="dropzoneForm" enctype="multipart/form-data">
                <div class="fallback">
                    <input name="files" type="file" multiple />
                </div>
            </form>
            <button id="recognizeButton" class="recognizeButton" type="submit">Recognize</button>
        </div>
        <div class="d-flex justify-content-center">
            <partial name="_PredictionPartialView" />
        </div>
</div>

